@model View.Models.NewSubImagesModel

@{
    ViewData["Title"] = "AddSubImages";
}

<h1>Add</h1>

<h4>SubImages</h4>
<hr />
<div class="row">
    @if (Model != null && Model.ErrorMessage != null)
    {
        <div style="background-color:white; color: red; width: 100%; height: 5%;">
            <p>@Model.ErrorMessage</p>
        </div>
    }
    <div class="col-md-4">
        <form asp-action="AddSubImage" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Subimages" class="control-label"></label>
                <input asp-for="Subimages" class="form-control" />
                <span asp-validation-for="Subimages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
